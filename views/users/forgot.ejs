<div class="wrapper flex">
    <div class="sign-up-box">
        <div class="forgot-title flex">
            <h2 class="title">Password reset</h2>
            <p>Enter your email below</p>
        </div>
        <%- include('../partials/errorMessage.ejs') %>
        <%- include('../partials/infoMessage.ejs') %>
        <form class="flex" action="/forgot" method="POST">
            <input class="first-child" type="email" name="email" placeholder="Email" value="<%= user.email %>" required="true" autofocus="true">
            <button class="submit" type="submit">reset password</button>
        </form>
        <p>Want to make a new account? <a href="/register">Join</a> for free</p>
    </div>
    <%- include('_side_text') %>
</div>